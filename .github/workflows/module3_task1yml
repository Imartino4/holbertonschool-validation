name: module3_task1

on:
  push:
  schedule:
    - cron: "0 0 * * *"
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - run: |
            cd module3_task1
            ./setup.sh
      - run: |
            cd module3_task1
            make build
      - run: |
            cd module3_task1
            make POST_NAME=name POST_TITLE=title post
      - run: |
            cd module3_task1
            make clean
      - run: |
            cd module3_task1
            make help
      - run: |
            cd module3_task1
            make greet
